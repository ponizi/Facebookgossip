<h1> Modifier un gossip </h1>

<% if @gossip.errors.any? %>
<div class="alert_n">
<span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>

  <p>Nous n'avons pas réussi à créer le potin pour la (ou les) raison(s) suivante(s) :</p>
  <ul>
  <% @gossip.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
</ul>
</div>
<% end %>


<%= form_for @gossip do |f| %>
    <div class="form-group">
        <label>Titre du gossip </label>
        <%= f.text_field :title, class: 'form-control' %>
    </div>

    <div class="form-group">
        <label>Contenu du gossip </label>
        <%= f.text_area :content, class: 'form-control' %>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary"> Publier le gossip </button>
    </div>
<% end %>